---
import { InfoProduct } from "@utils/file";
---

<div
  class="mt-10 grid lg:grid-cols-3 md:grid-cols-2 grid-cols-1 gap-x-8 mb-32 gap-y-7"
>
  {
    InfoProduct.map(
      ({
        producto,
        Descripcion,
        disponibilidad,
        familia,
        image,
        lugar_de_produccion,
        nombre_cientifico,
        tipos_de_empaque,
        variedad,
      }) => (
        <div class="bg-white border  rounded-lg py-5">
          <h2 class="text-center font-kanit text-2xl text-slate-950 py-3">
            {producto}
          </h2>

          <img
            src={image}
            alt={producto}
            width={450}
            height={450}
            class="col-span-2 lg:h-[320px] mx-auto w-full object-cover"
            loading="lazy"
          />
          <div class="mx-2 font-rubik py-4">
            <h2 class="text-slate-800">
              <span class="font-rubik text-slate-950 font-bold">
                Nombre cientifico:{" "}
              </span>
              {nombre_cientifico}
            </h2>
            <h2 class="text-slate-800">
              <span class="font-rubik text-slate-950 font-bold">familia: </span>
              {familia}
            </h2>
            <h2 class="text-slate-800">
              <span class="font-rubik text-slate-950 font-bold">
                Variedad:{" "}
              </span>
              {variedad}
            </h2>
            <h2 class="text-slate-800">
              <span class="font-rubik text-slate-950 font-bold">
                Lugar de produccion:{" "}
              </span>
              {lugar_de_produccion}
            </h2>
            <h2 class="text-slate-800">
              <span class="font-rubik text-slate-950 font-bold">
                Tipo de empaque:{" "}
              </span>{" "}
              {tipos_de_empaque}{" "}
            </h2>
            <h2 class="text-slate-800">
              <span class="font-rubik text-slate-950 font-bold">
                Disponibilidad:{" "}
              </span>{" "}
              {disponibilidad}{" "}
            </h2>
            <h2 class="text-slate-800">
              <span class="font-rubik text-slate-950 font-bold">
                Descripcion:{" "}
              </span>{" "}
              {Descripcion}{" "}
            </h2>
          </div>
        </div>
      ),
    )
  }
</div>
